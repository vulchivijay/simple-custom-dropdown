{
  "name": "simple-custom-dropdown",
  "version": "1.0.3",
  "author": "vulchivijay",
  "license": "MIT",
  "keywords": [
    "dropdown",
    "custom dropdown",
    "react custom dropdown",
    "dropdown component"
  ],
  "description": "A small, dependency-free custom dropdown component (library scaffold)",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "rollup --bundleConfigAsCjs --config",
    "test": "npm run build --silent && jest",
    "sync:dist": "node scripts/sync-dist.js",
    "postbuild": "npm run sync:dist",
    "demo:serve": "node scripts/serve-demo.js",
    "demo:open": "start http://localhost:5000",
    "release:prep": "npm run build && git add dist demo/dist && git commit -m \"chore(dist): build for release\" || true",
    "prepare": "npm run build",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vulchivijay/custom-dropdown.git"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.2.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
  "rollup": "^3.29.5",
    "ts-jest": "^29.0.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/generator": "^7.22.10"
  }
}
